<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_light_arrow">

    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBack"
        android:layout_above="@id/txtChangePassword"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:padding="@dimen/_10ssp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_user_placeholder"
                    app:riv_corner_radius="@dimen/_10sdp">

                </com.makeramen.roundedimageview.RoundedImageView>

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_edit">

                </ImageView>
            </RelativeLayout>

            <EditText
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:inputType="number"
                android:hint="@string/mobile_number"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingTop="@dimen/_10ssp"
                android:paddingBottom="@dimen/_10ssp"
                android:gravity="center_vertical"
                android:background="@drawable/border_grey"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/_30sdp">

            </EditText>

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:inputType="text"
                android:hint="@string/full_name"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingTop="@dimen/_10ssp"
                android:paddingBottom="@dimen/_10ssp"
                android:gravity="center_vertical"
                android:background="@drawable/border_grey"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/_10sdp">

            </EditText>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:inputType="textEmailAddress"
                android:hint="@string/email"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingTop="@dimen/_10ssp"
                android:paddingBottom="@dimen/_10ssp"
                android:gravity="center_vertical"
                android:background="@drawable/border_grey"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/_10sdp">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtFemale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/black"
                    android:text="@string/female">

                </TextView>

                <TextView
                    android:id="@+id/txtMale"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/black"
                    android:background="@drawable/border_grey"
                    android:textSize="@dimen/_10ssp"
                    android:text="@string/male">

                </TextView>

            </LinearLayout>

            <EditText
                android:id="@+id/edtBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:inputType="textEmailAddress"
                android:hint="@string/birthday"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingTop="@dimen/_10ssp"
                android:paddingBottom="@dimen/_10ssp"
                android:gravity="center_vertical"
                android:background="@drawable/border_grey"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/_10sdp">

            </EditText>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/txtChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10ssp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_above="@id/txtSaveDetails"
        android:fontFamily="@font/sfpro_bold"
        android:text="@string/change_password"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/border_grey"
        android:layout_marginTop="@dimen/_10sdp">

    </TextView>

    <TextView
        android:id="@+id/txtSaveDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10ssp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/sfpro_bold"
        android:text="@string/save_profile"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/_10sdp">

    </TextView>
</RelativeLayout>