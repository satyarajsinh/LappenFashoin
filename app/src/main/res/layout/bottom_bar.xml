<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_grey"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/linearHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/_7sdp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/ic_bulk_home">
        </ImageView>

        <TextView
            android:id="@+id/txtHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/home"
            android:textSize="@dimen/_10ssp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/_7sdp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgCategory"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/ic_light_category">
        </ImageView>

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/categories"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_10ssp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStudio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="@dimen/_7sdp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imgStudio"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/ic_light_camera">
        </ImageView>

        <TextView
            android:id="@+id/txtStudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/studio"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_10ssp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearExplore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/_7sdp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgExplore"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/ic_light_chart">
        </ImageView>

        <TextView
            android:id="@+id/txtExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/explore"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:textSize="@dimen/_10ssp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/_7sdp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/ic_light_profile">
        </ImageView>

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/user"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:textSize="@dimen/_10ssp">

        </TextView>

    </LinearLayout>
</LinearLayout>