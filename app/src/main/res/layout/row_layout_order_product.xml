<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progressBar"
            style="@style/SpinKitView.Circle"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            app:SpinKit_Style="FadingCircle"
            app:SpinKit_Color="@color/pink" />

        <ImageView
            android:id="@+id/imgProductImage"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_85sdp">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/relativeImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:ellipsize="end"
            android:maxLines="2"
            android:fontFamily="@font/poppins_medium">

        </TextView>

        <TextView
            android:id="@+id/txtQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/txtProductName"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_medium">

        </TextView>

        <TextView
            android:id="@+id/txtMrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/txtQty"
            android:layout_below="@id/txtProductName"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_medium">

        </TextView>

        <TextView
            android:id="@+id/txtSize"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="30dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/txtMrp"
            android:text="XL"
            android:gravity="center"
            android:background="@drawable/rounded_border_grey_20"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_gravity="center">

        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/txtId"
            android:layout_below="@id/txtMrp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@id/txtSize"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            app:cardCornerRadius="@dimen/_30sdp">
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_below="@id/relativeImage"
        android:background="@color/dark_light_grey">

    </View>

</RelativeLayout>