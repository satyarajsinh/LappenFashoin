<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeStatus"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_60sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="@dimen/_10sdp">

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cardView">

        </View>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_toRightOf="@id/relativeStatus"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:maxLines="1">

    </TextView>

    <TextView
        android:id="@+id/txtOrderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/relativeStatus"
        android:layout_below="@id/txtOrderStatus"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/wishlist_desc_color"
        android:maxLines="1">

    </TextView>

    <TextView
        android:id="@+id/txtOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/relativeStatus"
        android:layout_below="@id/txtOrderDate"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_10sdp"
        android:ellipsize="end"
        android:textColor="@color/wishlist_desc_color"
        android:maxLines="2">

    </TextView>

</RelativeLayout>